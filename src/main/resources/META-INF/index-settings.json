{
	"analysis": {
		"filter": {
        				"my_synonym_filter": {
          					"type": "synonym", 
          					"synonyms": [ 
            						"british,english",
            						"queen,monarch,king"
          					]
        				}
      		},
		"analyzer": {
			"asset_tag_name": {
						"filter": [
							"lowercase"
							,
							"stop"
							,
							"trim"
							,
							"word_delimiter"
							,
            						"my_synonym_filter" 
						],
						"tokenizer": "whitespace"
			},
			"keyword_lowercase": {
				"filter": ["lowercase","my_synonym_filter"],
				"tokenizer": "keyword"
			}
		}
	}
}
